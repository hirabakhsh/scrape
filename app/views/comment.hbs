

{{#if data}}
  <br>

    <h1 class="title">
      {{ data.title }}
    </h1>
    <h2 id="article-id" class="subtitle" data-id="{{data._id}}">
      Article Id: {{ data._id }}
    </h2>
  <br>

{{/if}}

<div class="columns">
  <div class="column">
    <div class="box">
        <div class="field">
          <input class="input" type="text" id="comment-input" name="comment" placeholder="Leave a comment"></input>
        </div>
        <div class="field">
          <button id="comment-submit" class="button is-success" autofocus>Submit</button>
          <a class="button is-warning" href="/">Back</a>
        </div>
    </div>
  </div>
</div>


<div class="columns">
  <div id="comments-div" class="column is-one-quarter">
    {{#each data.comments }}
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            {{#if this.created_date }}
              Added: {{ this.created_date }}
            {{else}}
              No creation date found
            {{/if}}
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            {{ this.text }}
          </div>
        </div>
      </div>
      <br>
    {{/each}}
  </div>
</div>